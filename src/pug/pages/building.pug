      .select
        .select__year(data-select data-type="year")
          input(type="hidden" data-type="year")
          .select__year--selected(data-value="null") роки
          ul.select__year--list.filter-form
            li.select__year--item(data-value="null") роки
            li.select__year--item(data-value="2021") 2021
            li.select__year--item(data-value="2020") 2020
            li.select__year--item(data-value="2019") 2019
            li.select__year--item(data-value="2018") 2018
        .select__month(data-select data-type="month")
          input(type="hidden" data-type="month")
          .select__month--selected(data-value="null") всі місяці
          ul.select__month--list.js-filter
            li.select__month--item(data-value="null") всі місяці
            li.select__month--item(data-value="9") вересень
            li.select__month--item(data-value="8") серпень
            li.select__month--item(data-value="7") липень
            li.select__month--item(data-value="6") червень
