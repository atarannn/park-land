            li.select__month--item(data-value="3") березень
            li.select__month--item(data-value="2") лютий
            li.select__month--item(data-value="1") січень
            li.select__month--item(data-value="12") ГРУДЕНЬ
            li.select__month--item(data-value="11") ЛИСТОПАД
            li.select__month--item(data-value="10") ЖОВТЕНЬ
